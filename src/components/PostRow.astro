---
import type { CollectionEntry } from 'astro:content';
export interface Props {
  post: CollectionEntry<'posts'>;
}
const { post } = Astro.props;
const { title, slug, category, cover } = post.data;
const url = `/${slug}/`;
---
<article class="row">
  <div class="meta">
    <p class="overline">{category}</p>
    <h2><a href={url}>{title}</a></h2>
    <a class="cta" href={url}>Read Article</a>
  </div>
  <a class="cover" href={url}>
    <img src={cover} alt={title} loading="lazy" width="1200" height="675" />
  </a>
</article>

<style>
.row {
  display: grid;
  grid-template-columns: 1fr 1.25fr;
  column-gap: var(--col-gap);
  align-items: center;
}

.meta h2 {
  font-size: var(--size-3);
}

.meta h2 a {
  color: inherit;
  text-decoration: none;
}

.cta {
  font-size: var(--size-0);
  color: var(--muted);
}

.cta:hover {
  color: var(--link);
  text-decoration: underline;
}

.cover img {
  width: 100%;
  height: 100%;
  aspect-ratio: 16 / 9;
  object-fit: cover;
}

@media (max-width: 1024px) {
  .row {
    grid-template-columns: 1fr;
    row-gap: var(--row-gap);
  }
  .cover {
    order: -1;
  }
}
</style>
