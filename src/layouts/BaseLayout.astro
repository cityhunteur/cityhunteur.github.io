---
import '../styles/global.css';
export interface Props {
  title?: string;
  font?: 'ibm' | 'ia';
}
const { title = 'Blog', font = 'ibm' } = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
  </head>
  <body class={font === 'ia' ? 'font-ia' : ''}>
    <header class="container">
      <nav class="breadcrumbs">
        <a href="/" class="brand">My Blog</a>
        {Astro.slots.has('breadcrumbs') && <span>/</span>}
        <slot name="breadcrumbs" />
      </nav>
    </header>
    <main class="container">
      <slot />
    </main>
    <footer class="container">
      {font === 'ia' ? (
        <p class="type-note">Typeface: iA Writer Quattro — © iA. Used under its license.</p>
      ) : (
        <p class="type-note">Typeface: IBM Plex Sans.</p>
      )}
    </footer>
  </body>
</html>

<style>
.breadcrumbs {
  display: flex;
  gap: 0.5em;
  align-items: baseline;
  font-size: var(--size-0);
}

.brand {
  font-weight: 700;
  font-size: var(--size-1);
  text-decoration: none;
  color: inherit;
}

.type-note {
  color: var(--muted);
  font-size: var(--size-0);
  margin-top: var(--row-gap);
}
</style>

